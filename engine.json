{
  "id": "popularity-only",
  "description": "Default settings",
  "engineFactory": "org.template.RecommendationEngine",
  "datasource": {
    "params" : {
      "name": "sample-handmade-data.txt",
      "appName": "handmade",
      "eventNames": ["purchase"],
      "eventWindow": {
        "duration": "1 day", // default is to not drop events
        "removeDuplicates": "true",  // default = false
        "compressProperties": "true" // default = false
      }
    }
  },
  "sparkConf": {
    "spark.serializer": "org.apache.spark.serializer.KryoSerializer",
    "spark.kryo.registrator": "org.apache.mahout.sparkbindings.io.MahoutKryoRegistrator",
    "spark.kryo.referenceTracking": "false",
    "spark.kryoserializer.buffer": "300m",
    "spark.executor.memory": "4g",
    "es.index.auto.create": "true"
  },
  "algorithms": [
    {
      "comment": "setup to only calculate a popularity model for *hot* and add it to the existing model for backfill",
      "name": "ur",
      "params": {
        "appName": "handmade",
        "indexName": "urindex",
        "typeName": "items",
        "eventNames": ["purchase"],
        "comment": "this will overwrite any existing popularity model, default is *popular* so add this to engine.json if you want *hot* to be always refreshed during train",
        "backfillField": {
          "backfillType": "hot",
          "duration": 259200
        },
      }
    }
  ]
}

